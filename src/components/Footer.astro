---
import siteConfig from '../data/siteConfig.json';
import profile from '../data/profile.json';
---

<footer class="footer bg-slate-900 text-white py-10">
  <div class="container mx-auto px-6">
    <div class="footer-content grid grid-cols-1 md:grid-cols-3 gap-10">
      <div class="footer-about">
        <h3 class="text-xl font-bold mb-4 text-primary">{siteConfig.logoText}</h3>
        <p class="text-slate-300 mb-4 text-sm">
          {siteConfig.footerDescription}
        </p>
        <div class="social-icons flex gap-4">
          {profile.social.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-white hover:text-primary transition-colors duration-300"
              aria-label={`Visit ${social.platform}`}
            >
              {social.platform === 'LinkedIn' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z" />
                </svg>
              )}
              {social.platform === 'GitHub' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
              )}
              {social.platform === 'Email' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <div class="footer-links">
        <h3 class="text-lg font-bold mb-4 text-accent1">Enlaces RÃ¡pidos</h3>
        <ul class="space-y-2">
          {siteConfig.navItems.map((item) => (
            <li>
              <a
                href={item.url}
                class="text-slate-300 hover:text-primary transition-colors duration-300 text-sm hover:underline"
              >
                {item.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="footer-contact">
        <h3 class="text-lg font-bold mb-4 text-accent1">Contacto</h3>
        <ul class="space-y-2 text-sm">
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span class="text-slate-300">{profile.email}</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-slate-300">{profile.location}</span>
          </li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom pt-8 mt-8 border-t border-slate-800 text-center text-slate-400 text-sm">
      <p>&copy; {new Date().getFullYear()} {siteConfig.logoText}. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>
